{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": "..",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": [
    "*.ts",
    "../types.ts",
    "../tag-registry.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}