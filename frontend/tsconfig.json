{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@features/*": ["features/*"],
      "@ui/*": ["ui/*"],
      "@scenes/*": ["scenes/*"],
      "@scripts/*": ["../scripts/*"]
    }
  },
  "include": ["src", "scripts", "public/locales/**/*.json"],
  "exclude": ["dist", "node_modules"]
}
